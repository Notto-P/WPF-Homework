<Window x:Class="ArrayList_Homework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArrayList_Homework"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btn_add" Content="Add" HorizontalAlignment="Left" Height="60" Margin="52,164,0,0" VerticalAlignment="Top" Width="158" FontSize="24" FontWeight="Bold" FontFamily="Comic Sans MS" Click="Btn_add_Click"/>
        <Button x:Name="btn_remove" Content="Remove" HorizontalAlignment="Left" Height="60" Margin="299,164,0,0" VerticalAlignment="Top" Width="158" FontSize="24" FontWeight="Bold" FontFamily="Comic Sans MS" Click="Btn_remove_Click"/>
        <Button x:Name="btn_showAll" Content="Show all" HorizontalAlignment="Left" Height="60" Margin="538,164,0,0" VerticalAlignment="Top" Width="158" FontSize="24" FontWeight="Bold" FontFamily="Comic Sans MS" Click="Btn_showAll_Click"/>
        <TextBox x:Name="tb_input" HorizontalAlignment="Left" Height="42" Margin="79,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="601" FontSize="22" TextAlignment="Center"/>

    </Grid>
</Window>
